
<%-include('./layout/header') %> 
<%-include('./layout/navbar') %> 

    <div class="registration-form mt-n1">
        <form action="/users/update/<%=user._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" id="name" name="name" placeholder="Username" value="<%=user.name%>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" id="email" name="email" placeholder="Email" value="<%=user.email%>">
            </div>
            <div class="form-group">
                <input type="tel" class="form-control item" id="phone" name="phone" placeholder="Phone Number" value="<%=user.phone%>">
     
            </div>
            <div class="form-group">
                <input type="file" class="form-control item" id="image" name="image" multiple>
                <img src="/<%=user.image%>" alt="" width="80" class="img-thumbnile">
            </div>
            <img type="hidden" name="oldImage" value="<%=user.image%>"src="" alt="">
            <div class="form-group">
              <button type="submit" class="btn btn-block create-account">Create</button>
              <a href="/users" class="btn btn-block create-account2">Back</a>
            </div>
        </form>
    </div>

    <%-include('./layout/footer') %> 
    